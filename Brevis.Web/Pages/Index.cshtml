@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="container">
    <nav class="bg-dark mb-4 navbar navbar-dark navbar-expand-md">
        <a asp-page="/Index" class="navbar-brand">
            <em>BREVIS</em>
        </a>
        <button aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-target="#topNavbarCollapse" data-toggle="collapse" type="button">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="topNavbarCollapse">
            <ul class="mr-auto navbar-nav">
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="https://twitter.com/damien_bod">
                        <img height="30" src="assets/damienbod.jpg" />
                    </a>
                </li>
            </ul>
        </div>
    </nav>

</div>
<div class="text-center">

    <h2>Calculá el camino mas corto para recibirte!</h2>
    <br>
    <div>
        <form method="post" enctype="multipart/form-data">
            <input asp-for="File" type="file" />
            <select asp-for="selectedProgressCarreer">
                <optgroup label="Seleccione un lector">
                    @{
                        foreach (var item in Model._progressCarreerTransformerImplementations)
                        {
                            <text>
                                <option>@item.Item1.@item.Item2</option>
                            </text>
                        }
                    }
                </optgroup>
            </select>
            <input type="submit" />
        </form>
    </div>

    <br />
    <br />


</div>
<div class="container body-content">
    <hr />
    <footer>
        <p>&copy; 2022 - UNGS - Bravis</p>
    </footer>
</div>
<style>
    table, th, td {
        border: 1px solid black;
    }
</style>
